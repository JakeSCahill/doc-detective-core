{
  "tests": [
    {
      "id": "process-search-kittens",
      "actions": [
        {
          "action": "goTo",
          "uri": "www.google.com"
        },
        {
          "action": "type",
          "css": "[title=Search]",
          "keys": "kittens",
          "trailingSpecialKey": "Enter"
        },
        {
          "action": "wait",
          "duration": "5000"
        },
        {
          "action": "screenshot",
          "filename": "results.png",
          "matchPrevious": true,
          "matchThreshold": 0.1
        }
      ]
    },
    {
      "id": "text-match-lucky",
      "actions": [
        {
          "action": "goTo",
          "uri": "www.google.com"
        },
        {
          "action": "matchText",
          "css": "#gbqfbb",
          "text": "I'm Feeling Lucky"
        },
        {
          "action": "matchText",
          "css": "#gbqfbb",
          "text": "$TEXT",
          "env": "./sample/variables.env"
        }
      ]
    },
    {
      "id": "process-lucky-shorthair",
      "actions": [
        {
          "action": "goTo",
          "uri": "$URL",
          "env": "./sample/variables.env"
        },
        {
          "action": "type",
          "css": "[title=Search]",
          "keys": "$SHORTHAIR_CAT_SEARCH"
        },
        {
          "action": "click",
          "css": "#gbqfbb"
        }
      ]
    },
    {
      "id": "non-ui-tests",
      "actions": [
        {
          "action": "runShell",
          "command": "echo $USERNAME",
          "env": "./sample/variables.env"
        },
        {
          "action": "checkLink",
          "uri": "https://www.google.com",
          "statusCodes": [
            200
          ]
        },
        {
          "action": "checkLink",
          "uri": "$URL",
          "statusCodes": [
            200
          ]
        }
      ]
    }
  ]
}