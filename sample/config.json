{
  "input": "sample/doc-content.md",
  "output": "sample/results.json",
  "recursive": true,
  "testExtensions": [
    ".md",
    ".mdx",
    ".html",
    ".htm",
    ".xml",
    ".json"
  ],
  "mediaDirectory": "sample",
  "fileTypes": [
    {
      "extensions": [
        ".md",
        ".mdx"
      ],
      "openTestStatement": "[comment]: # (test",
      "closeTestStatement": ")"
    },
    {
      "extensions": [
        ".html",
        ".htm",
        ".xml"
      ],
      "openTestStatement": "<!-- test",
      "closeTestStatement": "-->"
    }
  ],
  "browserOptions": {
    "headless": "true",
    "path": "",
    "height": "",
    "width": ""
  },
  "analytics": {
    "send": false,
    "userId": "",
    "detailLevel": "action",
    "servers": [
      {
        "uri": "https://analytics.doc-unit-test.com",
        "method": "POST",
        "headers": [
          "X-DOC-UNIT-TEST: $DOC-UNIT-TEST"
        ],
        "envs": "$DOC-UNIT-TEST-ENVS"
      }
    ]
  },
  "verbose": false
}