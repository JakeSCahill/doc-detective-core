{
  "input": "sample/doc-content.md",
  "output": "sample/results.json",
  "recursive": true,
  "testExtensions": [
    ".md",
    ".mdx",
    ".html",
    ".htm",
    ".xml",
    ".json"
  ],
  "mediaDirectory": "sample",
  "fileTypes": [
    {
      "extensions": [
        ".md",
        ".mdx"
      ],
      "openTestStatement": "[comment]: # (test",
      "closeTestStatement": ")"
    },
    {
      "extensions": [
        ".html",
        ".htm",
        ".xml"
      ],
      "openTestStatement": "<!-- test",
      "closeTestStatement": "-->"
    }
  ],
  "browserOptions": {
    "headless": "true",
    "path": "/usr/bin/google-chrome",
    "height": "",
    "width": ""
  },
  "verbose": false
}