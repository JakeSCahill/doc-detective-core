{
  "testFile": "sample.md",
  "testDirectory": "./tests",
  "recursive": true,
  "testExtensions": [
    ".md",
    ".mdx",
    ".html",
    ".htm",
    ".xml"
  ],
  "imageDirectory": ".",
  "videoDirectory": ".",
  "fileTypes": [
    {
      "extensions": [
        ".md",
        ".mdx"
      ],
      "openTestStatement": "[comment]: # (test",
      "closeTestStatement": ")"
    },
    {
      "extensions": [
        ".html",
        ".htm",
        ".xml"
      ],
      "openTestStatement": "<!-- test",
      "closeTestStatement": "-->"
    }    
  ]
}