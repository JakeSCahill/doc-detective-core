{
  "testFile": "",
  "testDirectory": "./tests",
  "recursive": true,
  "testExtensions": [
    ".md",
    ".mdx",
    ".html",
    ".htm",
    ".xml"
  ],
  "imageDirectory": "./images",
  "videoDirectory": "./videos",
  "fileTypes": [
    {
      "extensions": [
        ".md",
        ".mdx"
      ],
      "openTestStatement": "// test",
      "closeTestStatement": "",
      "openBlockTestStatement": "/* test",
      "closeBlockTestStatement": "*/"
    },
    {
      "extensions": [
        ".html",
        ".htm",
        ".xml"
      ],
      "openTestStatement": "<!-- test",
      "closeTestStatement": "-->",
      "openBlockTestStatement": "<!-- test",
      "closeBlockTestStatement": "-->"
    }    
  ]
}